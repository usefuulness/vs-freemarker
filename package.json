{
    "name": "freemarker",
    "displayName": "FreeMarker",
    "description": "Language Support for FreeMarker",
    "version": "9.0.3",
    "publisher": "usefuulness",
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:ftl",
        "onCommand:freemarker.clearImportCache"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/usefuulness/vs-freemarker.git"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ftl",
                "aliases": [
                    "FreeMarker",
                    "ftl"
                ],
                "extensions": [
                    ".ftl",
                    ".html"
                ],
                "configuration": "./ftl.configuration.json"
            }
        ],
        "commands": [
            {
                "command": "freemarker.clearImportCache",
                "title": "FreeMarker: Clear Template Cache"
            }
        ],
        "configuration": {
            "title": "FreeMarker",
            "properties": {
                "freemarker.importResolver.templateDirectories": {
                    "type": "array",
                    "description": "Directories to search when resolving FreeMarker templates.",
                    "default": [
                        "templates",
                        "views",
                        "src"
                    ],
                    "items": {
                        "type": "string"
                    }
                },
                "freemarker.importResolver.maxCacheSize": {
                    "type": "number",
                    "description": "Maximum number of templates to keep in the import resolver cache. Older entries are evicted when the limit is reached.",
                    "default": 200,
                    "minimum": 0
                }
            }
        },
        "grammars": [
            {
                "language": "ftl",
                "scopeName": "text.html.ftl",
                "path": "./syntaxes/ftl.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "ftl",
                "path": "./snippets/ftl.json"
            },
            {
                "language": "ftl",
                "path": "./snippets/html.json"
            }
        ]
    },
    "bugs": {
        "url": "https://github.com/usefuulness/vs-freemarker/issues"
    },
    "homepage": "https://github.com/usefuulness/vs-freemarker#readme",
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.50.0",
        "jest": "^29.5.0",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.0"
    },
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "clean": "rimraf out dist",
        "pretest": "npm run build",
        "package": "vsce package",
        "vscode:prepublish": "npm run build"
    },
    "keywords": [
        "visual",
        "studio",
        "code",
        "vs",
        "freemarker",
        "ftl"
    ],
    "author": "Alfred @ (offone.dev) && Daniel Cortes <dcortes1892@gmail.com> (http://dcortes92.github.io/)",
    "license": "MIT",
    "icon": "images/logo.png",
    "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
